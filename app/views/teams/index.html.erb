<% if flash[:color] == "red" %>
  <div class="red-text"><%= flash[:notice] %></div>
<% elsif flash[:color] == "green" %>
  <div class="green-text"><%= flash[:notice] %></div>
<% else %>
  <div><%= flash[:notice] %></div>
<% end %>

<div class="row">
  <div class="col-lg-4 col-md-12"><h2>チーム一覧</h2></div>
  <div class="col-lg-6 col-md-0"></div>
  <div class="col-lg-2 col-md-12"><%= link_to "新規作成", new_team_path, class: "btn btn-outline-primary" %></div>
</div>

<div id="teams">
  <% @teams.each do |team| %>
    <p>
      <strong>チーム名:</strong>
      <%= team.name %>
      <div>
        <%= link_to "詳細", team , class: "btn btn-primary" %>
        <%= link_to "編集", edit_team_path(team), class: "btn btn-success" %>
        <% if team.rails_nurses == nil %>
          <%= button_to "削除", team, method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    </p>
  <% end %>
</div>
