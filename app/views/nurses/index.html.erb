<p style="color: green"><%= notice %></p>

<h1>看護師一覧</h1>
<%= link_to "新規作成", new_nurse_path %>

<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :name_cont, '氏名' %>
    <%= f.search_field :name_cont, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :team_name_cont, 'チーム' %>
    <%= f.search_field :team_name_cont, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :ladder_level_cont, 'ラダーレベル' %>
    <%= f.search_field :ladder_level_cont, class: 'form-control' %>
  </div>
  <%= f.submit '検索', class: 'btn btn-primary' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name, '氏名') %></th>
      <th><%= sort_link(@q, :team_name, 'チーム') %></th>
      <th><%= sort_link(@q, :ladder_level, 'ラダーレベル') %></th>
    </tr>
  </thead>
  <tbody>
    <% @nurses.each do |nurse| %>
      <tr>
        <td><%= nurse.name %></td>
        <td><%= nurse.team.name %></td>
        <td><%= nurse.ladder_level %></td>
      </tr>
    <% end %>
  </tbody>
</table>
